# SweetText API Configuration Template
# Copy this file to .env and replace with your actual API keys

# ===== OPENAI GPT API =====
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ===== HUMANIZEAI API =====
# Get your API key from: https://humanizeai.pro/
HUMANIZEAI_API_KEY=your_humanizeai_api_key_here
HUMANIZEAI_API_URL=https://api.humanizeai.pro/v1/humanize

# ===== ZEROGPT API =====
# Get your API key from: https://zerogpt.com/api
ZEROGPT_API_KEY=your_zerogpt_api_key_here
ZEROGPT_API_URL=https://api.zerogpt.com/api/detect/detectText

# ===== APPLICATION SETTINGS =====
NODE_ENV=development
PORT=3000
APP_NAME=SweetText
APP_VERSION=1.0.0

# ===== FILE PROCESSING =====
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=application/pdf
PROCESSING_TIMEOUT_MS=30000

# ===== RATE LIMITING =====
API_RATE_LIMIT_REQUESTS_PER_MINUTE=10
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY_MS=1000

# ===== DEVELOPMENT =====
DEBUG_MODE=true
LOG_LEVEL=info
ENABLE_CORS=true